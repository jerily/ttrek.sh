{
	"name":	"bcrypt-tcl",
	"version":	"2.0.0",
	"scripts":	{
	},
	"dependencies":	{
		"tcl": "^9.0.0-beta.2"
	},
	"devDependencies":	{
	},
	"build": {
		"linux.x86_64": [
			{ "cmd": "download", "url": "https://github.com/jerily/bcrypt-tcl/archive/refs/tags/v2.0.0.tar.gz" },
			{ "cmd": "unpack" },
			{ "cmd": "cd" },
			{ "cmd": "cmake_config",
				"options": [
					{"name": "TCL_LIBRARY_DIR", "value":  "$INSTALL_DIR/lib"},
					{"name": "TCL_INCLUDE_DIR", "value":  "$INSTALL_DIR/include"}
				]
			},
			{ "cmd": "make" },
			{ "cmd": "make_install" }
		]
	}
}