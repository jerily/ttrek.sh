{
	"name":	"openssl",
	"version":	"3.0.14",
	"scripts":	{
	},
	"dependencies":	{
	},
	"devDependencies":	{
	},
	"build": {
		"default": [
			{
				"cmd": "download",
				"url": "https://www.openssl.org/source/openssl-3.0.14.tar.gz"
			},
			{ "cmd": "unpack" },
			{ "cmd": "cd", "dirname": "$SOURCE_DIR" },
			{
				"cmd": "configure",
				"path": "./Configure",
				"options": [
					{ "name": "libdir", "value": "lib" },
					{ "name": "no-shared", "if": "+static" },
					{ "name": "no-pinshared", "if": "+static" }
				]
			},
			{ "cmd": "make", "parallel": true },
			{ "cmd": "make_install" }
		]
	}
}