{
	"name":	"thtml",
	"version":	"1.0.0",
	"scripts":	{
	},
	"dependencies":	{
		"tcl": "^9.0.0-beta.1",
		"tdom": "^0.9.3"
	},
	"devDependencies":	{
	},
	"build": {
		"default": [
			{ "cmd": "download", "url": "https://github.com/jerily/thtml/archive/refs/tags/v1.0.0.tar.gz" },
			{ "cmd": "unpack" },
			{ "cmd": "cd" },
			{ "cmd": "cmake_config",
				"options": [
					{"name": "TCL_LIBRARY_DIR", "value":  "$INSTALL_DIR/lib"},
					{"name": "TCL_INCLUDE_DIR", "value":  "$INSTALL_DIR/include"}
				]
			},
			{ "cmd": "make" },
			{ "cmd": "make_install" }
		]
	}
}