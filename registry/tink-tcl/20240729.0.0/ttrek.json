{
	"name":	"tink-tcl",
	"version":	"20240729.0.0",
	"scripts":	{
	},
	"dependencies":	{
		"tink-cc":	"^2.1.1",
		"tcl": ">=8.6.14"
	},
	"devDependencies":	{
	},
	"build": {
		"default": [
			{ "cmd": "download", "url": "https://github.com/jerily/tink-tcl/archive/refs/tags/v20240729.0.tar.gz" },
			{ "cmd": "unpack" },
			{ "cmd": "cd" },
			{ "cmd": "cmake_config",
				"options": [
					{"name": "TCL_LIBRARY_DIR", "value":  "$INSTALL_DIR/lib"},
					{"name": "TCL_INCLUDE_DIR", "value":  "$INSTALL_DIR/include"},
					{"name": "TINK_CPP_DIR", "value":  "$INSTALL_DIR"}
				]
			},
			{ "cmd": "make", "parallel": true },
			{ "cmd": "make_install" }
		]
	}
}