{
	"name": "trequests",
	"version": "1.0.0",
	"scripts": {
	},
	"dependencies":	{
		"curl": "^8.7.1",
		"tcl": ">=8.6.14"
	},
	"devDependencies": {
	},
	"build": {
		"default": [
			{
				"cmd": "git",
				"url": "https://github.com/jerily/trequests.git",
				"branch": "main",
				"recurse-submodules": true,
				"shallow-submodules": true
			},
			{ "cmd": "cd" },
			{ "cmd": "cmake_config",
				"options": [
					{"name": "TCL_LIBRARY_DIR", "value":  "$INSTALL_DIR/lib"},
					{"name": "TCL_INCLUDE_DIR", "value":  "$INSTALL_DIR/include"}
				]
			},
			{ "cmd": "make", "parallel": true },
			{ "cmd": "make_install" }
		]
	}
}